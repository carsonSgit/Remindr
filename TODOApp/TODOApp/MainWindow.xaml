<Window x:Class="TODOApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TODOApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="900">
    <Grid>
        <!-- Split the window into 2 parts, going by 2:1 ratio -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"></ColumnDefinition>
            <ColumnDefinition Width="auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <!-- Tasks Window -->
        <GroupBox Grid.Column="0" Width="280" Margin="10" BorderBrush="Gray" BorderThickness="1">
            <GroupBox.Header>
                <Bold FontSize="15">Tasks</Bold>
            </GroupBox.Header>
            <StackPanel>
                <!-- Display of tasks in list view -->
                <ListView Height="360" Width="auto" MaxWidth="280" Margin="5">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Task Name" Width="135" DisplayMemberBinding="{Binding TaskName}"></GridViewColumn>
                            <GridViewColumn Header="Due Date" Width="135" DisplayMemberBinding="{Binding DueDate}"></GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
                
                <!-- Buttons for: sort, save load -->
                <Border BorderBrush="Gray" BorderThickness="1" Margin="5">
                    <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Content="Sort" Margin="5"></Button>
                    <Button Grid.Column="1" Content="Save" Margin="5"></Button>
                    <Button Grid.Column="2" Content="Load" Margin="5"></Button>
                    </Grid>
                </Border>

                <!-- Buttons for generating report -->
                <GroupBox BorderBrush="Gray" BorderThickness="1" Margin="5, 0, 5, 5">
                    <GroupBox.Header>Generate Report</GroupBox.Header>
                    <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                        <!-- Button: Generate Report (for tasks due today) -->
                        <Button Grid.Column="0" Content="Due Today" Margin="5"></Button>

                        <!-- Button: Generate Report (for overdue tasks) -->
                        <Button Grid.Column="1" Content="Overdue" Margin="5"></Button>
                    </Grid>
                </GroupBox>
                
                <!-- Add Tasks -->
                <Border BorderBrush="Gray" BorderThickness="1" Margin="5">
                    <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"></ColumnDefinition>
                        <ColumnDefinition Width="auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Content="Add Task" Margin="5" Width="75"></Button>
                    <TextBox Grid.Column="1" Margin="5" Width="155"></TextBox>
                    </Grid>
                    </Border>

    </StackPanel>
            
            
        </GroupBox>
       
        
        
    </Grid>
</Window>
